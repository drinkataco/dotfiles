snippet vimspector "Spector" b
{
  "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json",
  "configurations": {
    ${0:configuration}
  }
}
endsnippet

#
# JAVASCRIPT
#
snippet vs_js "Javascript - default" b
"${0:default}": {
  "adapter": "vscode-node",
  "breakpoints": {
    "exception": {
      "all": "N",
      "uncaught": "Y"
    }
  },
  "configuration": {
    "request": "launch",
    "protocol": "auto",
    "stopOnEntry": true,
    "console": "integratedTerminal",
    "program": "${workspaceRoot}/${1:main.js}",
    "cwd": "${workspaceRoot}"
  }
}
endsnippet

