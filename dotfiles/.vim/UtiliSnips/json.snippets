snippet vs_jest "Javascript - Jest Configuration" b
"jest": {
  "adapter": "vscode-node",
  "breakpoints": {
    "exception": {
      "all": "N",
      "uncaught": "Y"
    }
  },
  "configuration": {
    "request": "launch",
    "name": "Jest debugger",
    "type": "node",
    "console": "integratedTerminal",
    "program": "${workspaceRoot}/node_modules/.bin/jest",
    "skipFiles": ["*/<node_internals>/**/*.js", "node_modules/**/*.js"],
    "cwd": "${workspaceRoot}"
  }
}
endsnippet

snippet vs_serverless "Javascript - Serverless Configuration" b
"serverless": {
  "adapter": "vscode-node",
  "breakpoints": {
    "exception": {
      "all": "N",
      "uncaught": "Y"
    }
  },
  "configuration": {
    "type": "node",
    "request": "launch",
    "program": "${workspaceRoot}/node_modules/.bin/serverless",
    "args": ["offline"],
    "runtimeArgs": ["--nolazy"],
    "console": "integratedTerminal",
    "skipFiles": ["<node_internals>/**"],
    "sourceMaps": true,
    "cwd": "${workspaceRoot}"
  }
}
endsnippet

