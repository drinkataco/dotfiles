#################################
# CONFIG                        #
#################################
[core]
  fileMode     = true
  eol          = lf
  excludesfile = ~/.gitignore
  editor       = vim
  pager        = less -F -X
  whitespace   = trailing-space

[blame]
  date = human

[branch]
  autoSetupRebase = always

[diff]
  tool = vimdiff

[gpg]
  program = gpg

[init]
  defaultBranch = main
  templateDir = ~/.git/templates/default

[log]
  decorate = auto

[merge]
  tool = vimdiff

[pull]
  rebase = true

[push]
  default    = current
  followTags = true

[rebase]
  abbreviateCommands = true

[remote "origin"]
  fetch = +refs/pr/*/head:refs/remotes/origin/pr/*

[status]
  short = true

[web]
  browser = firefox

[user]
  useConfigOnly = true


###########################################
# INCLUDE                                 #
# sensitive configi for gpg and identity  #
# with includeIfs rules for work/personal #
###########################################
[include]
  path = ~/.git/.gitconfig


#################################
# ALIAS                         #
# @deprecated - use omz aliases #
#################################
[alias]
  a = add
  b = branch
  c = commit
  cm = commit -m
  cam = commit -am
  ch = checkout
  d = diff
  f = fetch
  l = log
  m = merge
  p = push
  r = rebase
  s = status
